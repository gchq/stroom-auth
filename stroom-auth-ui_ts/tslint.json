{
  "extends": ["tslint-react-hooks"],
  "defaultSeverity": "warning",
  "rules": {
    "defaultSeverity": "warning",
    "react-hooks-nesting": "error"
  },
  "jsRules": {
    "no-empty": true
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "moduleResolution": "node"
}
